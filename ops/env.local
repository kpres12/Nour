# Local development environment variables (no Docker)
# Copy this to .env.local in the backend directory

# Database
DATABASE_URL=postgresql://localhost/nour

# JWT Settings
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=Nour

# LLM Settings (optional)
LLM_ENABLED=false
LLM_API_KEY=
LLM_MODEL=gpt-3.5-turbo

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
